    <div id="login-side-bar" class="side-bar">
        <div class="col-12">
            <h4 id="update-password">Log In</h4>
        </div>
        <form class="col-12" id="login-form">
            <div class="username-section">
                <h5>Username</h5>
                <input class="profile-info-field" type="text" name="username" id="login-username">
            </div>
            <div class="password-section">
                <h5>Password</h5>
                <input class="profile-info-field" type="password" name="password" id="login-password">
            </div>
            <a role="button" class="btn form-button" onclick="login();">Log in</a>
            <p class="topspace-p">Don't have an account?</p>
            <a class="btn form-button sign-up-button" onclick="switch_between_login_and_signup();">Sign up</a>
        </form>
        <div class="side-menu-nav-button" onclick="toggle_login_menu();"> <!-- set onclick for this to close menu -->
            <i class="fas fa-arrow-right"></i>
        </div>
    </div>
    <div id="signup-side-bar" class="side-bar">
        <div class="col-12">
            <h4 id="update-password">Sign Up</h4>
        </div>
        <form class="col-12" id="signup-form">
            <div class="username-section">
                <h5>Email</h5>
                <input class="profile-info-field" type="text" name="email" id="signup-email">
            </div>
            <div class="username-section">
                <h5>Username</h5>
                <input class="profile-info-field" type="text" name="username" id="signup-username">
            </div>
            <div class="password-section">
                <h5>Password</h5>
                <input class="profile-info-field" type="password" name="password" id="signup-password">
            </div>
            <div class="password-section">
                <h5>Confirm Password</h5>
                <input class="profile-info-field" type="password" name="confirm_password" id="signup-confirm-password">
            </div>
            <a role="button" class="btn form-button" onclick="login();">Sign up</a>
        </form>
