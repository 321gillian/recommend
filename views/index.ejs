    <div id="profile-side-bar" class="side-bar">
        <div class="col-12">
            <h4 id="edit-profile">Profile Settings</h4>
        </div>
        <form class="col-12" id="profile-form">
            <div class="avatar-section">
                <img id="avatar-preview" class="avatar" src="media/avatars/user.jpg" alt="username">
                <div class="avatar-editor" onclick="$('#avatar-file-input').trigger('click');console.log($('#avatar-file-input'));">
                    <i class="fas fa-pen-square"></i>
                </div>
                <input id="avatar-file-input" type="file" name="avatar" onchange="update_avatar_preview(event)">
            </div>
            <div class="username-section">
                <h5>Change username</h5>
                <input class="profile-info-field" type="text" name="username" id="edit-username" value="yuzernaem">
            </div>
            <a role="button" class="btn form-button" onclick="switch_between_profile_and_password();">Change Password</a>
            <a role="button" class="btn form-button" onclick="save_profile();">Save Changes</a>
            <a role="button" class="btn form-button" id="logout-button" onclick="logout();">Log out</a>
            <a role="button" class="btn form-button" id="delete-profile-button" onclick="confirm_delete_profile();">Delete account</a>
        </form>
        <div class="side-menu-nav-button" onclick="switch_between_main_and_profile();"> <!-- set onclick for this to close menu -->
            <i class="fas fa-arrow-left"></i>
        </div>
    </div>
    <div id="password-side-bar" class="side-bar">
        <div class="col-12">
            <h4 id="update-password">Update Password</h4>
        </div>
        <form class="col-12" id="password-form">
            <div class="password-section">
                <h5>Old Password</h5>
                <input class="profile-info-field" type="password" name="old_password" id="old_password">
            </div>
            <div class="password-section">
                <h5>New Password</h5>
                <input class="profile-info-field" type="password" name="new_password" id="new_password">
            </div>
            <div class="password-section">
                <h5>Confirm New Password</h5>
                <input class="profile-info-field" type="password" name="confirm_new_password" id="confirm_new_password">
            </div>
            <a role="button" class="btn form-button" onclick="update_password();">Save Changes</a>
        </form>
        <div class="side-menu-nav-button" onclick="switch_between_profile_and_password();"> <!-- set onclick for this to close menu -->
