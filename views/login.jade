doctype html
html
  head
    meta(charset='utf-8')
    meta(name='description', content='')
    title Mystery Music App
   
 
   header
      h1 Mystery Music App
      p Login
      h2 #{error}
      
        label(for="email") User Name:
        input(id="email",type='text')
        br
        label(for="password") Password:
        input(id="password",type='password')
        br
        button.button(id= "submit_login",type="submit") Login
        div
        each song in detail
          h1 #{song.title}
          p #{song.lyrics}      
          a.button(href='show/#{song.id}') More info
          a.button(href='') Next
       
         
   script(src='./media/login_client.js')
   script(src='//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js', type='text/javascript')
